<!DOCTYPE html>
<!-- todo rename to browse.jinja2 -->
<html>
  <head>
    <title>List of videos</title>
    <link rel="stylesheet" type="text/css" href="/static/reset.css">
    <link rel="stylesheet" type="text/css" href="/static/browse.css">
  </head>

  <body>
    <h1>Videos</h1>

    <div class="posters">
      {% for video in videos %}
        <div class="poster">
          <a href="/watch/{{video.video_id}}">
            <img src="{{video.poster_url}}" alt="{{video.video_id}}">
            <span class="title">{{ video.video_id }}</span>
          </a>
        </div>
      {% endfor %}
    </div>

    <ul>
      {% for video_id in video_ids %}
        <li>
          <a href="/watch/{{video_id}}">{{ video_id }}</a>
        </li>
      {% endfor %}
    </ul>
  </body>
</html>